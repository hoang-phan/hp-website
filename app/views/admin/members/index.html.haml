%h3.section-header 
  All members
  = link_to 'New Member', new_admin_member_path, class: 'btn btn-primary pull-right'

%table.table.table-hover.table-striped
  %thead
    %tr
      %td Name
      %td Role
      %td
  %tbody
    - collection.each do |member|
      %tr
        %td= member.name
        %td= member.role
        %td
          = link_to 'Edit', edit_admin_member_path(member)
          = link_to 'Delete', [:admin, member], method: :delete, data: { confirm: 'Are you sure?' }
